doctype html
html
  head
    meta(charset='utf-8')

    title Moodsy

    meta(name='description', content='Easy and fun way to share your emotions!')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(href='/landing.css', rel='stylesheet')
    // TODO: Remove unused font-weights
    link(href='http://fonts.googleapis.com/css?family=Lato:400,300,700,900',
    rel='stylesheet')

  body(onload="changeBg()")
    script.
      function changeBg() {
        var i = Math.floor(Math.random() * 3.99)
        document.body.style.backgroundImage = 'url(/images/backgrounds/' + i + '.jpeg)'
        document.getElementById("iphone").src = '/images/iphones/' + i + '.png'
      }
    div#container
      header
        h1 Moodsy
        h2 Share your emotions

      section
        div#text
          | A fast, beautiful & fun way to 
          b share
          |  and 
          b track
          |  your emotions

        div#stores
          a(href='http://itunes.com/apps/Moodsy')
            img(src='/images/app-store.png')
          img(src='/images/google-play.png')

        div#iphones
          img(src='/images/iphones/0.png', id='iphone')

      footer
        div#content
          span#social
            a(href='https://www.facebook.com/moodsy.official')
              img(src='/images/facebook.png')
            a(href='https://twitter.com/MoodsyOfficial')
              img(src='/images/twitter.png')
            a(href='#')
              img(src='/images/pinterest.png')
            a(href='https://instagram.com/moodsy/')
              img(src='/images/instagram.png')
          span#links
            a(href='/privacy') Privacy
            a(href='/press') Press
            a(href='http://developers.moodsy.me') API
            a(href='/privacy') Web Widget
          span#copyright
            | Â© 2015 Moodsy All Rights Reserved
        div(style='clear:both;')
